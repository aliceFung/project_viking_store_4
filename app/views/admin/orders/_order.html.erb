<tr>
  <td><%= order.id %></td>
  <td><%= link_to order.user_id, user_path(order.user_id) %></td>
  <td><%= order.street %></td>
  <td><%= order.city %></td>
  <td><%= order.state %></td>
  <td><%= number_to_currency(order.value) %></td>
   <td class = <%= order.status == "Placed" ? "alert-success" : "alert-danger" %> ><%= order.status %></td>
  <td><%= order.checkout_date ? order.checkout_date.to_date : "In cart" %></td>

  <td><%= link_to "Show", order_path(order) %></td>
  <td><%= link_to "Edit", edit_order_path(order) %></td>
  <td><%= link_to "Delete", order_path(order), method: :delete,class: "alert-danger", data: {confirm: "Really really delete this order?"} %></td>
</tr>