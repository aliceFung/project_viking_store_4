<tr>
  <td><%= product.id %></td>
  <td><%= product.name %></td>
  <td><%= product.sku %></td>
  <td><%= product.description %></td>
  <td><%= number_to_currency(product.price) %></td>
  <% if product.category %>
  <td><%= link_to product.category.name, category_path(product.category_id) %></td>
  <% else %>
  <td>N/A</td>
  <% end %>
  <td><%= link_to "show", product_path(product) %></td>
  <td><%= link_to "edit", edit_product_path(product) %></td>
  <td><%= link_to "delete", product_path(product), method: :delete, data: {confirm: "Really really delete this product?"} %></td>
</tr>

