<div class="row text-center">
  <h3>Viking Store Products</h3>

  <%= link_to new_product_path do %>
    <%= button_tag(type: 'button', class: 'btn btn-lg btn-primary') do
            content_tag(:strong, 'Create New Product')
    end %>
  <% end %>

</div>
<hr>
<div class="row scrollable">
  <table class="table table-bordered scrollable">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>SKU</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category ID</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <%= render @products %>
  </table>
</div>