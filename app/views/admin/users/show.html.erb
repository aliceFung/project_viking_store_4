

<h1>User <%= @user.id %>: <%= @user.full_name %></h1>
<h2>Demographic information</h1>
<ul>
  <li>First name: <%= @user.first_name %></li>
  <li>Last name: <%= @user.last_name %></li>
  <li>Email: <%= @user.email %></li>


  <li>Default Billing Address: 
    <% if @user.default_billing_address_id %>
      <%= @user.default_billing_address_id.street_address %>
    <% else %>
      None provided
    <% end -%>
  </li>

  <li>Default Shipping Address: 
    <% if @user.default_shipping_address_id %>
      <%= @user.default_shipping_address_id.street_address %>
    <% else %>
      None provided
    <% end -%>
  </li>

  <h3><%= link_to "Edit #{@user.full_name}/'s information ", edit_user_path(@user) %></h3>
  <h3><%= link_to "Delete #{@user.full_name}", user_path(@user), method: :delete,  data: {confirm: "Really really delete this user?"} %></h3>
    <h3><%= link_to "View Saved Addresses", addresses_path({user_id: @user.id}) %></h3>
    <h3><%= link_to "View Unplaced Order (Cart)", orders_path({user_id: @user.id}) %></h3>



    <h3>Credit Cards</h3>
    <table class="table table-bordered">
      <tr>
        <th>Nickname</th>
        <th>Card_number</th>
        <th>Exp_month</th>
        <th>Exp_year</th>
        <th>Brand</th>
      </tr>
      <% @user.credit_cards.each do |card| %>
        <tr>
          <td><%= card.nickname %></td>
          <td><%= card.card_number %></td>
          <td><%= card.exp_month %></td>
          <td><%= card.exp_year %></td>
          <td><%= card.brand %></td>
        </tr>
      <% end %>
    </table>

<h2>Admin Actions for <%= @user.full_name %> </h2>

<%= link_to new_order_path({:user_id => @user.id}) do %>
  <%= button_tag(type: 'button', class: 'btn btn-lg btn-primary') do
              content_tag(:strong, 'Create Order')
        end %>
<% end %>
<br><br><br>
<%= link_to new_address_path({user_id: @user.id})  do %>
<%= button_tag(type: 'button', class: 'btn btn-lg btn-primary') do
            content_tag(:strong, 'Create Address')
      end %>
<% end %>

<div class = "row">
  <div class = "col-sm-12 text-center">
    <h2>Order History</h2>

    <table class="table table-striped table-hover">
        <tr>
          <th>ID</th>
          <th>Order Date</th>
          <th>Value</th>
          <th>Status</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% @user.orders.each do |order| %>
          <tr>
            <td> <%= order.id %> </td>
            <td> <%= order.created_at %> </td>
            <td> <%= number_to_currency(order.value) %> </td>

            <% if order.checkout_date %>
              <td> Placed </td>
            <% else %>
              <td style="color:red"> Unplaced </td>
            <% end -%>

            <td> <%= link_to 'Show' %> </td>
            <td> <%= link_to 'Edit' %> </td>
            <td> <%= link_to 'Delete', method: :delete, class: "alert-danger", 
                    data: { confirm: "Are you sure?" } %> </td>
          </tr>
        <% end %>

    </table>
  </div>
</div>



